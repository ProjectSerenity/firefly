load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "parser",
    srcs = ["parser.go"],
    importpath = "firefly-os.dev/tools/ruse/parser",
    visibility = ["//visibility:public"],
    deps = [
        "//tools/ruse/ast",
        "//tools/ruse/lexer",
        "//tools/ruse/token",
    ],
)

go_test(
    name = "parser_test",
    size = "small",
    srcs = ["parser_test.go"],
    embed = [":parser"],
    deps = [
        "//tools/ruse/ast",
        "//tools/ruse/lexer",
        "//tools/ruse/token",
        "//vendor/github.com/google/go-cmp/cmp",
    ],
)
