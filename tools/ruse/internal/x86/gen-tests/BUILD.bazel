    name = "gen-tests_test",
    size = "small",
    srcs = [
        "equivalence_test.go",
        "fixup_test.go",
        "generate_test.go",
        "heuristics_test.go",
    ],
    embed = [":gen-tests_lib"],
    deps = [
        "//vendor/github.com/google/go-cmp/cmp",
    ],
