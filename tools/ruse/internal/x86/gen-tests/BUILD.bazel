load("@rules_go//go:def.bzl", "go_binary", "go_library", "go_test")

go_library(
    name = "gen-tests_lib",
    srcs = [
        "equivalence.go",
        "fixup.go",
        "generate.go",
        "heuristics.go",
        "main.go",
    ],
    importpath = "firefly-os.dev/tools/ruse/internal/x86/gen-tests",
    visibility = ["//visibility:private"],
    deps = [
        "//tools/ruse/internal/x86",
