load("@rules_rust//rust:defs.bzl", "rust_clippy", "rust_doc", "rust_library", "rustfmt_test")

rust_library(
    name = "firefly",
    srcs = [
        "lib.rs",
    ],
    crate_name = "firefly",
    edition = "2021",
    visibility = ["//visibility:public"],
    deps = [
        "//shared/firefly_abi",
        "//user/firefly_syscalls",
    ],
)

rust_clippy(
    name = "clippy",
    deps = [":firefly"],
)

rust_doc(
    name = "docs",
    crate = ":firefly",
)

rustfmt_test(
    name = "fmt_test",
    size = "small",
    targets = [":firefly"],
)
